<h6 id="title">Switch</h6>

<div class="mdc-switch-row">
  <div class="mdc-switch-container">
    <div><MdcSwitch @checked={{this.checked1}}
        {{on "MdcSwitch:checked" (fn this.toggle "checked1")}} />
    </div>
    <div>Checked: {{this.checked1}}</div>

  </div>
  <div class="mdc-switch-container">
    <div><MdcSwitch @checked={{true}} @disabled={{true}} /></div>
  </div>

  <div class="mdc-switch-container">
    <div><MdcSwitch @label="on/off" @checked={{this.on}}
      {{on "MdcSwitch:checked" (fn this.toggle "on")}}/>
    </div>
    <div>On: {{this.on}}</div>
  </div>
</div>
