<div class="mdc-chip {{unless this.interactive "mdc-chip--non-interactive"}}" {{did-insert this.didInsert}} ...attributes
     id={{@id}}
     role="row"
     data-permanent={{@permanent}}>
  {{#if this.interactive}}
    <div class="mdc-chip__ripple"></div>
  {{/if}}

  {{#if @leadingIcon}}
    <MdcIcon class="mdc-chip__icon mdc-chip__icon--leading" @icon={{@leadingIcon}} />
  {{/if}}
  <span role="gridcell">
    <span role="button" tabindex={{this.tabindex}} class="mdc-chip__primary-action">
      <span class="mdc-chip__text">
        {{#if (has-block)}}
          {{yield}}
        {{else}}
          {{@text}}
        {{/if}}
      </span>
    </span>
  </span>
  {{#if @trailingIcon}}
    <span role="gridcell">
      <MdcIcon class="mdc-chip__icon mdc-chip__icon--trailing" @icon={{@trailingIcon}} tabindex="-1" role="button" {{on "click" this.remove}} />
    </span>
  {{/if}}
</div>
