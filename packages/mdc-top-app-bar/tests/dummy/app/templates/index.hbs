<MdcTopAppBar @prominent={{this.prominent}}
              @fixed={{this.fixed}}
              @dense={{this.dense}}
              @short={{this.short}}
              @navigation={{this.navigation}}
              @shortCollapsed={{this.shortCollapsed}}>
  <MdcTopAppBarRow>
    <MdcTopAppBarSection @position="alignStart">
      <MdcTopAppBarNavigationIcon @icon="menu" />
      <MdcTopAppBarTitle>Top App Bar</MdcTopAppBarTitle>
    </MdcTopAppBarSection>

    <MdcTopAppBarSection @position="alignEnd" @role="toolbar">
      <MdcTopAppBarActionItem @label="Download" @alt="Download" @icon="file_download" />

      {{#unless this.short}}
        <MdcTopAppBarActionItem @label="Print this page" @icon="print" />
        <MdcTopAppBarActionItem @label="Bookbark this page" @icon="bookmark" />
      {{/unless}}
    </MdcTopAppBarSection>
  </MdcTopAppBarRow>
</MdcTopAppBar>

<div class="main-content" {{mdc-top-app-bar-fixed-adjustment dense=this.dense short=this.short prominent=this.prominent}}>
  <div style="padding: 16px">
    <div>Fixed <input type="checkbox" {{on "change" (fn this.toggle "fixed")}} /></div>
    <div>Prominent <input type="checkbox" {{on "change" (fn this.toggle "prominent")}} /></div>
    <div>Dense <input type="checkbox" {{on "change" (fn this.toggle "dense")}} /></div>
    <div>Short <input type="checkbox" {{on "change" (fn this.toggle "short")}} /></div>

    {{#if this.short}}
      <div>Always Collapsed <input type="checkbox" {{on "change" (fn this.toggle "shortCollapsed")}} /></div>
    {{/if}}

  </div>

</div>
