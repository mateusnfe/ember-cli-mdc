<button class="mdc-icon-button {{this.iconClass}} {{@kind}}" {{mdc-ripple unbounded=true}} ...attributes>
  <div class="mdc-icon-button__ripple"></div>
  <span class="mdc-icon-button__focus-ring"></span>
  {{#if @icon}}
    <MdcIcon @icon={{@icon}} />
  {{else @image}}
    <img class="mdc-icon-button__icon" src={{@image}} />
  {{/if}}
</button>