<MdcFormField @alignEnd={{@alignEnd}} @noWrap={{@noWrap}}>
  <div class="mdc-checkbox {{if @disabled "mdc-checkbox--disabled"}}" {{did-insert this.didInsert}}>
    <MdcCheckboxNativeControl @checked={{@checked}} @indeterminate={{@indeterminate}} disabled={{@disabled}} ...attributes />

    <div class="mdc-checkbox__background">
      <svg class="mdc-checkbox__checkmark" viewBox="0 0 24 24">
        <path class="mdc-checkbox__checkmark-path" fill="none" d="M1.73,12.91 8.1,19.28 22.79,4.59"/>
      </svg>
      <div class="mdc-checkbox__mixedmark"></div>
    </div>
    <div class="mdc-checkbox__ripple"></div>
  </div>

  {{#if (has-block)}}
    <label for={{this.nativeControlId}}>{{yield}}</label>
  {{else}}
    {{#if @label}}
      <label for={{this.nativeControlId}}>{{@label}}</label>
    {{/if}}
  {{/if}}

</MdcFormField>