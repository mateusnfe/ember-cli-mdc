<h5>Checkboxes</h5>

<h6>Checkbox with no Label</h6>

<div>
  <div><MdcCheckbox @checked={{this.checked}} {{on "input" (action (mut this.checked) value="target.checked")}} />{{this.checked}}</div>
  <div><MdcCheckbox /></div>
  <div><MdcCheckbox @disabled={{this.disabled}} />
    <button {{on "click" this.toggleDisabled}}>Toggle Disabled</button>
  </div>
</div>

<h6>Checkbox with Label</h6>

<div>
  <MdcFormField @label="This is a checkbox with a label">
    <MdcCheckbox />
  </MdcFormField>
</div>

<div>
  <MdcFormField @label="This is a checkbox with a label (align end)" @alignEnd="true">
    <MdcCheckbox />
  </MdcFormField>
</div>

<div>
  <MdcFormField>
    <:label>This is a checkbox with a label</:label>
    <:default><MdcCheckbox /></:default>
  </MdcFormField>
</div>

<h6>Indeterminate</h6>

<p>
  <MdcFormField @label="This is an indeterminate checkbox">
    <MdcCheckbox @indeterminate={{this.indeterminate}}  />
  </MdcFormField>
</p>

<p><button {{on "click" (action (mut this.indeterminate true))}}>Set indeterminate</button></p>
