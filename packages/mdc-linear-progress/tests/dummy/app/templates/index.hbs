<h2>Linear Progress</h2>

<h3>Buffered</h3>

<MdcLinearProgress @value={{0.5}} @buffer={{0.8}} />

<h3>Indeterminate</h3>

<MdcLinearProgress @indeterminate={{true}} />

<h3>Reversed</h3>

<MdcLinearProgress @reversed={{true}} @value={{45}} @min={{0}} @max={{100}} />

<h3>Reversed Buffered</h3>

<MdcLinearProgress @reversed={{true}} @value={{0.37}} @buffer={{0.81}} />

<h2>Real-time Update Demo</h2>

<div class="actions"><button {{on "click" this.toggleProgress}}>{{if this.started "Stop" "Start"}}</button></div>
<MdcLinearProgress @value={{this.count}} @min={{0}} @max={{100}} />
