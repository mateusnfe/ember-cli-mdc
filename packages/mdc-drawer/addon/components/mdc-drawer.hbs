<aside class="mdc-drawer {{this.styleClassName}}" ...attributes
  {{did-insert this.didInsert}}
  {{did-update this.recreate @style}}
  {{did-update this.toggleOpen @open}}>
  {{yield (hash
              isPermanent=isPermanent
              isDismissible=isDismissible
              isModal=isModal)}}
</aside>

{{#if this.isModal}}
  <div class="mdc-drawer-scrim"></div>
{{/if}}
