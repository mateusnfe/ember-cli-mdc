<h5>Text Fields</h5>

<h6>Filled</h6>

<div class="text-field-row">
  <div class="text-field-container">
    <MdcTextfield @style="filled" @label="Filled" />
  </div>

  <div class="text-field-container">
    <MdcTextfield @label="Helper Text" @helperText="This is helper text" @persistentHelperText={{false}} />
  </div>

  <div class="text-field-container">
    <MdcTextfield @label="Error message" @helperText="This is helper text" @errorMessage="This is an error message." />
  </div>

  <div class="text-field-container">
    <MdcTextfield @style="filled" @label="Pre-filled" @value="Pre-filled with value" />
  </div>

  <div class="text-field-container">
    <MdcTextfield @style="filled" />
  </div>

  <div class="text-field-container">
    <MdcTextfield @style="filled" @label="Disabled" @disabled={{true}} />
  </div>
</div>

<h6>Outlined</h6>

<div class="text-field-row">
  <div class="text-field-container">
    <MdcTextfield @style="outlined" @label="Outlined" />
  </div>

  <div class="text-field-container">
    <MdcTextfield @label="Helper Text" @helperText="This is helper text" @persistentHelperText={{false}} />
  </div>

  <div class="text-field-container">
    <MdcTextfield @label="Error message" @helperText="This is helper text" @errorMessage="This is an error message." />
  </div>

  <div class="text-field-container">
    <MdcTextfield @style="outlined" @label="Pre-filled" @value="Pre-filled with value" />
  </div>

  <div class="text-field-container">
    <MdcTextfield @style="outlined" />
  </div>

  <div class="text-field-container">
    <MdcTextfield @style="outlined" @label="Disabled" @disabled={{true}} />
  </div>
</div>

<h6>Leading Icons</h6>

<div class="text-field-row">
  <div class="text-field-container">
    <MdcTextfield @style="filled" @label="Leading icon">
      <:leading-icon>
        <MdcTextfieldLeadingIcon @icon="email" />
      </:leading-icon>
    </MdcTextfield>
  </div>

  <div class="text-field-container">
    <MdcTextfield @style="filled" @label="Clickable Leading icon">
      <:leading-icon>
        <MdcTextfieldLeadingIcon  @icon="email" @clickable="true"
          {{on "click" this.alert}} />
      </:leading-icon>
    </MdcTextfield>

  </div>

  <div class="text-field-container">
    <MdcTextfield @style="outlined" @label="Leading icon">
      <:leading-icon>
        <MdcTextfieldLeadingIcon @icon="email" />
      </:leading-icon>
    </MdcTextfield>
  </div>

  <div class="text-field-container">
    <MdcTextfield @style="outlined" @label="Clickable Leading icon"
                  @value="This is pre-filled">
      <:leading-icon>
        <MdcTextfieldLeadingIcon @icon="email" @clickable={{true}}
            {{on "click" this.alert}} />
      </:leading-icon>
    </MdcTextfield>

  </div>

  <div class="text-field-container">
    <MdcTextfield @style="outlined">
      <:leading-icon>
        <MdcTextfieldLeadingIcon @icon="email" @clickable={{false}}
          {{on "click" this.alert}} />
      </:leading-icon>
    </MdcTextfield>
  </div>

  <div class="text-field-container">
    <MdcTextfield @style="outlined" @label="Clickable Leading icon" @disabled={{true}}>
      <:leading-icon>
        <MdcTextfieldLeadingIcon @icon="email" @clickable={{true}}
          {{on "click" this.alert}} />
      </:leading-icon>
    </MdcTextfield>
  </div>
</div>

<h6>Trailing Icons</h6>

<div class="text-field-row">
  <MdcTextfield @style="filled" @label="Trailing icon">
    <:trailing-icon>
      <MdcTextfieldTrailingIcon @icon="visibility_off" />
    </:trailing-icon>
  </MdcTextfield>

  <MdcTextfield @style="filled" @label="Clickable trailing icon">
    <:trailing-icon>
      <MdcTextfieldTrailingIcon @icon="visibility_off" @clickable={{true}}
        {{on "click" this.alert}} />
    </:trailing-icon>
  </MdcTextfield>

  <MdcTextfield @style="outlined" @label="Trailing icon">
    <:trailing-icon>
      <MdcTextfieldTrailingIcon @icon="visibility_off" />
    </:trailing-icon>
  </MdcTextfield>

  <MdcTextfield @style="outlined" @label="Clickable trailing icon">
    <:trailing-icon>
      <MdcTextfieldTrailingIcon @icon="visibility_off" @clickable={{true}}
        {{on "click" this.alert}} />
    </:trailing-icon>
  </MdcTextfield>

  <MdcTextfield @style="outlined">
    <:trailing-icon>
      <MdcTextfieldTrailingIcon @icon="visibility_off" @clickable={{false}}
        {{on "click" this.alert}} />
    </:trailing-icon>
  </MdcTextfield>


  <MdcTextfield @style="outlined" @label="Clickable trailing icon" @disabled={{true}}>
    <:trailing-icon>
      <MdcTextfieldTrailingIcon @icon="visibility_off" @clickable={{true}}
        {{on "click" this.alert}} />
    </:trailing-icon>
  </MdcTextfield>
</div>


<h6>Leading & Trailing Icons</h6>

<div class="text-field-row">
  <div class="text-field-container">
    <MdcTextfield @style="filled" @label="Filled" @leadingIcon="lock" @trailingIcon="visibility_off" />
  </div>

  <div class="text-field-container">
    <MdcTextfield @style="outlined" @label="Outlined" @leadingIcon="lock" @trailingIcon="visibility_off" />
  </div>
</div>

<h6>Character Count</h6>

<div class="text-field-row">
  <div class="text-field-container">
    <MdcTextfield @style="filled" @label="Filled" @characterCount={{true}} maxlength="20" />
  </div>

  <div class="text-field-container">
    <MdcTextfield @style="outlined" @label="Outlined" @characterCount={{true}} maxlength="50" />
  </div>

  <div class="text-field-container">
    <MdcTextfield @style="outlined"
                  @label="Outlined"
                  @helperText="This also has helper text."
                  @persistentHelperText={{true}}
                  @characterCount={{true}}
                  maxlength="25" />
  </div>
</div>

<h6>Prefix &amp; Suffix</h6>

<div class="text-field-row">
  <div class="text-field-container">
    <MdcTextfield @style="filled" @label="Filled" @prefix="$" @suffix=".00" />
  </div>

  <div class="text-field-container">
    <MdcTextfield @style="outlined" @label="Outlined" @prefix="$" @suffix=".00" />
  </div>
</div>

<h6>Validation</h6>

<div class="text-field-row">
  <div class="text-field-container">
    <MdcTextfield @style="filled" @label="Required" required="true" />
  </div>

  <div class="text-field-container">
    <MdcTextfield @style="outlined"
                  @label="Min / Max"
                  @type="number"
                  min=10
                  max=10000
                  @helperText="Must be between 10 and 10000." />
  </div>

  <div class="text-field-container">
    <MdcTextfield @label="Pattern"
                  pattern="[A-Za-z]{3}"
                  @helperText="Three letter country code." />
  </div>

  <div class="text-field-container">
    <MdcTextfield @label="Validation message"
                  @helperText="10 <= n <= 10000"
                  @persistentHelperText={{true}}
                  @validationMessages={{this.validationMessages}}
                  @type="number"
                  required="true"
                  min=10
                  max=10000 />
  </div>
</div>

<h5>Textarea</h5>

<div class="text-field-row">
  <div class="text-field-container">
    <MdcTextarea @label="Filled"
                 @style="filled"
                 rows="8" cols="40"
                 @resizable={{true}} />
  </div>

  <div class="text-field-container">
    <MdcTextarea @label="Filled"
                 @style="outlined"
                 rows="8" cols="40"
                 @errorMessage="This is not resizable."
                 @resizable={{false}}
                 @characterCount={{true}}
                 maxlength="500" />
  </div>

  <div class="text-field-container">
    <MdcTextarea @label="Filled"
                 @style="outlined"
                 rows="8" cols="40"
                 @errorMessage="We have a problem here."
                 @characterCount={{true}}
                 @withInternalCounter={{true}}
                 maxlength="500" />
  </div>

  <div class="text-field-container">
    <MdcTextarea @label="Helper Text"
                 @style="outlined"
                 @helperText="This has helper text"
                 @persistentHelperText={{true}}
                 rows="8" cols="40" />
  </div>

  <div class="text-field-container">
    <MdcTextarea @label="Disabled"
                 @style="outlined"
                 @disabled={{true}}
                 rows="8" cols="40" />
  </div>

  <div class="text-field-container">
    <MdcTextarea @label="Required"
                 @style="outlined"
                 required={{true}}
                 rows="8" cols="40" />
  </div>
</div>
