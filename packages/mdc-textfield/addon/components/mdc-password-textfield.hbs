{{#if @leadingIcon}}
  <MdcTextfield  @style={{@style}}
                 @label={{@label}}
                 @value={{@value}}
                 @noHelperLine={{@noHelperLine}}
                 @errorMessage={{@errorMessage}}
                 @helperText={{@helperText}}
                 @persistentHelperText={{@persistentHelperText}}
                 class="mdc-text-field--password"
                 ...attributes
                 @type={{if this.showPassword "text" "password"}}>
    <:leading-icon>
      <MdcTextfieldLeadingIcon @icon={{@leadingIcon}} />
    </:leading-icon>

    <:trailing-icon>
      <MdcTextfieldTrailingIcon @icon={{if this.showPassword this.visibleIcon this.invisibleIcon}}
                                @clickable={{true}}
        {{on "click" this.toggle}} />
    </:trailing-icon>
  </MdcTextfield>
{{else}}
  <MdcTextfield  @style={{@style}}
                 @label={{@label}}
                 @value={{@value}}
                 @noHelperLine={{@noHelperLine}}
                 @errorMessage={{@errorMessage}}
                 @helperText={{@helperText}}
                 @persistentHelperText={{@persistentHelperText}}
                 class="mdc-text-field--password"
                 ...attributes
                 @type={{if this.showPassword "text" "password"}}>
    <:trailing-icon>
      <MdcTextfieldTrailingIcon @icon={{if this.showPassword this.visibleIcon this.invisibleIcon}}
                                @clickable={{true}}
        {{on "click" this.toggle}} />
    </:trailing-icon>
  </MdcTextfield>
{{/if}}
