<div>
  Transition:
  <select {{on "change" this.setTransition}}>
    <option>(nothing selected)</option>
    <option value="true">True</option>
    <option value="false">False</option>
  </select>
</div>

<h3>Using Modifiers</h3>

<div style="height: 50px" {{mdc-elevation elevation=this.elevation transition=this.transition}} />
