  <MdcMenuSurface @position="fixed" @open={{this.open}} @anchorElement="#anchor" @anchorCorner="bottomStart">
    <ul class="menu-content">
      <li>Item 1</li>
      <li>Item 2</li>
    </ul>
  </MdcMenuSurface>
</div>