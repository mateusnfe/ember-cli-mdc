<a href={{this.href}} role="menuitem" class="mdc-menu-item {{if @selected "mdc-menu-item--selected"}}" ...attributes>
  {{#if (has-block)}}
    {{yield}}
  {{else}}
    {{#if icon}}
      <MdcListItemGraphicIcon @icon={{icon}} />
    {{/if}}
    <MdcMenuItemText>{{text}}</MdcMenuItemText>
    {{#if metaIcon}}
      <MdcListItemMetaIcon @icon={{metaIcon}} />
    {{/if}}
  {{/if}}
</a>