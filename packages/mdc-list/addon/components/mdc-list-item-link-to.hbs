<a class="mdc-deprecated-list-item
  {{if @selected "mdc-deprecated-list-item--selected"}}
  {{if @activated "mdc-deprecated-list-item--activated"}}
  {{if @disabled "mdc-deprecated-list-item--disabled"}}
  {{if this.activated "mdc-deprecated-list-item--activated"}}"
   href={{this.href}}
    tabindex={{this.tabindex}}
   aria-selected={{if @selected true}} ...attributes>
  <span class="mdc-deprecated-list-item__ripple"></span>

  {{#if (has-block)}}
    {{yield}}
  {{else}}
    {{#if @graphicIcon}}
      <MdcListItemGraphicIcon @icon={{@graphicIcon}} />
    {{/if}}

    {{#if @text}}
      <MdcListItemText>{{@text}}</MdcListItemText>
    {{else if @primaryText}}
      <MdcListItemText>
        <MdcListItemPrimaryText>{{@primaryText}}</MdcListItemPrimaryText>
        <MdcListItemSecondaryText>{{@secondaryText}}</MdcListItemSecondaryText>
      </MdcListItemText>
    {{/if}}

    {{#if @metaIcon}}
      <MdcListItemMetaIcon @icon={{@metaIcon}} />
    {{/if}}
  {{/if}}
</a>

