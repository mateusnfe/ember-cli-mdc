<li class="mdc-list-item
  {{if @selected "mdc-list-item--selected"}}
  {{if @activated "mdc-list-item--activated"}}
  {{if @disabled "mdc-list-item--disabled"}}"
    aria-selected={{@selected}}
    tabindex={{if @selected 0}}
    ...attributes>
  <span class="mdc-list-item__ripple"></span>

  {{#if (has-block)}}
    {{yield}}
  {{else}}
    {{#if @graphicIcon}}
      <MdcListItemGraphicIcon @icon={{@graphicIcon}} />
    {{/if}}

    {{#if @text}}
      <MdcListItemText>{{@text}}</MdcListItemText>
    {{else if @primaryText}}
      <MdcListItemText>
        <MdcListItemPrimaryText>{{@primaryText}}</MdcListItemPrimaryText>
        <MdcListItemSecondaryText>{{@secondaryText}}</MdcListItemSecondaryText>
      </MdcListItemText>
    {{/if}}

    {{#if @metaIcon}}
      <MdcListItemMetaIcon @icon={{@metaIcon}} />
    {{/if}}
  {{/if}}
</li>
