<h2 id="title">Lists</h2>

<h3 class="mdc-typography--headline5">Single-line items</h3>

<div class="mdc-list-container">
  <MdcList>
    <MdcListItem><MdcListItemText>Single-line item</MdcListItemText></MdcListItem>
    <MdcListItem @text="Single-line item" />
    <MdcListItemLinkTo @route="linkto" @text="Single-line Link-To item" />
  </MdcList>
</div>

<h3 class="mdc-typography--headline6">Leading icon</h3>

<div class="mdc-list-container">
  <MdcList>
    <MdcListItem>
      <MdcListItemGraphicIcon @icon="wifi" />
      <MdcListItemText>Single-line item</MdcListItemText>
    </MdcListItem>

    <MdcListItem @graphicIcon="bluetooth" @text="Single-line item" />
    <MdcListItem @graphicIcon="data_usage" @text="Single-line item" />
  </MdcList>
</div>

<h3 class="mdc-typography--headline6">Trailing icon</h3>

<div class="mdc-list-container">
  <MdcList>
    <MdcListItem>
      <MdcListItemText>Single-line item</MdcListItemText>
      <MdcListItemMetaIcon @icon="info" />
    </MdcListItem>

    <MdcListItem @text="Single-line item" @metaIcon="info" />
    <MdcListItemLinkTo @route="linkto" @text="Single-line item" @metaIcon="chevron_right" />
  </MdcList>
</div>

<h3 class="mdc-typography--headline6">Two-Line with Leading and Trailing Icon and Divider</h3>

<div class="mdc-list-container">
  <MdcList @twoLine={{true}} @leadingTile="avatar">
    <MdcListItem @graphicIcon="folder" @primaryText="Dog Photos" @secondaryText="9 Jan 2018" @metaIcon="info" />
    <MdcListItem @graphicIcon="folder" @primaryText="Cat Photos" @secondaryText="22 Dec 2017" @metaIcon="info" />

    <MdcListDivider />

    <MdcListItem @graphicIcon="folder" @primaryText="Potatoes" @secondaryText="30 Nov 2017" @metaIcon="info" />
    <MdcListItem @graphicIcon="folder" @primaryText="Carrots" @secondaryText="17 Oct 2017" @metaIcon="info" />
  </MdcList>
</div>

