<div class="mdc-dialog
  {{if this.compact "mdc-dialog--compact"}}
  {{if @fullscreen "mdc-dialog--fullscreen"}}"
     ...attributes
  {{did-insert this.didInsert}}
  {{did-update this.open @open}}>

  {{#if @sheet}}
    <div class="mdc-dialog__scrim" data-mdc-dialog-action={{this.cancelAction}}></div>
  {{/if}}

  <div class="mdc-dialog__container">
    <div class="mdc-dialog__surface"
         role="alertdialog"
         aria-modal="true"
         aria-labelledby={{this.dialogTitleId}}
         aria-describedby={{this.dialogContentId}}>
      {{#if @fullscreen}}
        <div class="mdc-dialog__header">
          <h2 class="mdc-dialog__title" id="my-dialog-title">{{@title}}</h2>
          <MdcIconButton class="mdc-dialog__close"
                         data-mdc-dialog-action={{this.closeAction}}
                         @icon={{this.closeIcon}} />
        </div>
      {{else if @title}}
        <h2 class="mdc-dialog__title" id={{this.dialogTitleId}}><!--
        -->{{@title}}<!--
        --></h2>
      {{/if}}

      {{#if @sheet}}
        <MdcIconButton class="mdc-dialog__close"
                       data-mdc-dialog-action={{this.closeAction}}
                       @icon={{this.closeIcon}} />
      {{/if}}

      <div class="mdc-dialog__content" id={{this.dialogContentId}}>
        {{yield to="content"}}
      </div>

      {{#if (has-block "actions")}}
        <div class="mdc-dialog__actions">
          {{yield to="actions"}}
        </div>
      {{/if}}
    </div>
  </div>
  {{#unless @sheet}}
    <div class="mdc-dialog__scrim"></div>
  {{/unless}}
</div>
