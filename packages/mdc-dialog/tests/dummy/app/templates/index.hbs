<p><MdcButton @style="unelevated" {{on "click" (fn this.showDialog "sheet")}}>Show Sheet Dialog</MdcButton></p>

<MdcDialog @title="Use Google's location service?" @open={{this.showBasicDialog}} @fullscreen={{true}}>
  <:content>
    Let Google help apps determine location. It means sending anonymous
    location data to Google, even when no apps are running.
  </:content>


  <:actions>
    <MdcDialogButton @label="Decline" />

    <MdcDialogButton @label="Accept" @default={{true}} @initialFocus={{true}}
      {{on "click" this.accept}} />
  </:actions>
</MdcDialog>


