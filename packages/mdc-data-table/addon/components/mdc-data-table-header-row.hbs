<thead>
  <tr class="mdc-data-table__header-row" ...attributes>
    {{#if @selectable}}
      <MdcDataTableHeaderCell @selectable={{true}} />
    {{/if}}

    {{#if (has-block)}}
      {{yield}}
    {{else}}
      {{#each this.headers as |header|}}
        <MdcDataTableHeaderCell @numeric={{header.numeric}}>{{header.name}}</MdcDataTableHeaderCell>
      {{/each}}
    {{/if}}
  </tr>
</thead>
