<h5 id="title">Select Menus</h5>

<h6>Filled</h6>
<p>
  <MdcSelect @options={{this.foodGroups}}
             @label="Pick a Food Group"
             @change={{this.change}}
             @firstOptionIsEmpty={{true}}
             @leadingIcon="event"
             @value={{this.value}}
             @width="400px" />
</p>

<p>
  <button {{on "click" this.select}}>Select Fruits</button>
  <button {{on "click" this.clear}}>Clear</button>

</p>


{{#if this.selected}}
  <p>[{{this.selected.value}}]: {{this.selected.text}}</p>
{{/if}}

<h6>Outlined</h6>

<p>
  <MdcSelect @options={{this.foodGroups}}
             @label="Pick a Food Group"
             @firstOptionIsEmpty={{true}}
             @style="outlined"
             @width="400px" />
</p>


<h6>Select w/ Helper Text</h6>

<p>
  <MdcSelect @options={{this.foodGroups}}
             @label="Pick a Food Group"
             @firstOptionIsEmpty={{true}}
             @style="outlined"
             @leadingIcon="event"
             @required={{true}}
             @helperText="This is your helper text."
             @persistentHelperText={{true}}
             @width="400px" />
</p>

<h6>Select w/ Adapter</h6>

<p>
  <MdcSelect @options={{this.actors}}
             @label="Pick an actor"
             @valueKey="id"
             @textKey="name"
             @firstOptionIsEmpty={{true}}
             @style="outlined"
             @change={{this.selectActor}}
             @width="400px" />
</p>

<p>Selected actor: {{this.actor.name}}</p>

